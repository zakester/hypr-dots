	"tooltip-format-ethernet": "{ifname} ÔÉÅ",
	"tooltip-format-disconnected": "Disconnected",
	"max-length": 50
},
    "custom/updates": {
        "exec": "(paru -Qua) | wc -l",
        "interval": 7200,
        "format": "Ôõô {}"
    },
    "temperature": {
